<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/preference_space"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="enableDropboxAccount"
        android:title="@string/settings.dropbox_account" />

    <PreferenceCategory
        android:key="userInfo"
        android:layout="@layout/preference_category_summary"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="enableApplication"
        android:title="@string/settings.turn_on" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="enableUploadOnlyByWifi"
        android:title="@string/settings.only_wifi" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="enableStartAfterReboot"
        android:title="@string/settings.after_reboot" />

    <EditTextPreference
        android:key="screenshotsPath"
        android:title="Путь к скриншотам"
        android:dialogTitle="Путь к скриншотам" />

    <ListPreference
        android:title="Класс обозревателя"
        android:summary="Выберите работающий (¬_¬) класс"
        android:key="observerClass"
        android:defaultValue="1"
        android:entries="@array/classesArray"
        android:entryValues="@array/classesValues" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="debugMode"
        android:title="@string/settings.debug_mode" />

    <PreferenceCategory
        android:title="Разработчик"
        android:summary="Влад &lt;gimrcpp@gmail.com&gt;"
        android:layout="@layout/preference_category_summary"/>

    <PreferenceCategory
        android:layout="@layout/preference_space"/>

</PreferenceScreen>